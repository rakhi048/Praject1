@model Transaction
<form method="post" action="~/Transaction/Transfer">
   
    <div class="form-group">
        <label for="fromAccountId">From Account ID:</label>
        <input type="number" class="form-control" id="fromAccountId" name="fromAccountId">
    </div>
    <div class="form-group">
        <label for="toAccountId">To Account ID:</label>
        <input type="number" class="form-control" id="toAccountId" name="toAccountId">
    </div>
    <div class="form-group">
        <label for="amount">Amount:</label>
        <input type="number" class="form-control" id="amount" name="amount">
    </div>
    <button type="submit" class="btn btn-primary">Transfer Money</button>
</form>

